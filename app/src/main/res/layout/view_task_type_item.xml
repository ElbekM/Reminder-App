<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/taskTypeImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_menu_general"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/taskTypeTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/taskTypeImageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="My Day" />

    <TextView
        android:id="@+id/taskTypeSubtitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/taskTypeImageView"
        app:layout_constraintTop_toBottomOf="@id/taskTypeTitleTextView"
        tools:text="5 tasks" />
</androidx.constraintlayout.widget.ConstraintLayout>
